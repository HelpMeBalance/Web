{% extends 'profile.html.twig' %}

{% block body %}

    <div class="flex justify-center items-center h-screen"> 
        <div class="w-full max-w-md p-6 bg-gray-50 rounded-lg shadow-lg">
            <h1 class="text-3xl font-bold text-gray-900 mb-4">Modification du profil de {{ app.user.firstname }}</h1>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="mb-4">
                    <label for="firstname" class="text-gray-900 mb-2">First Name : </label>
                    {{ form_errors(form.firstname) }}
                    {{ form_widget(form.firstname, {'attr': {'value': app.user.firstname}}) }}
                </div>
                <div class="mb-4">
                    <label for="lastname" class="text-gray-900 mb-2">Last Name : </label> 
                    {{ form_errors(form.lastname) }}
                    {{ form_widget(form.lastname, {'attr': {'value': app.user.lastname}}) }}
                </div>
                    <div class="text-red-400">{{ form_errors(form) }}</div>
                <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring focus:ring-green-500 focus:ring-opacity-50">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
