{% extends 'base.html.twig' %}

{% block title %}Publication index{% endblock %}

{% block body %}
    <h1>Publication index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>ComOuvert</th>
                <th>Anonyme</th>
                <th>Likes</th>
                <th>Valide</th>
                <th>DateC</th>
                <th>DateM</th>
                <th>Vues</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publication in publications %}
            <tr>
                <td>{{ publication.id }}</td>
                <td>{{ publication.contenu }}</td>
                <td>{{ publication.comOuvert ? 'Yes' : 'No' }}</td>
                <td>{{ publication.anonyme ? 'Yes' : 'No' }}</td>
                <td>{{ publication.likes }}</td>
                <td>{{ publication.valide ? 'Yes' : 'No' }}</td>
                <td>{{ publication.dateC ? publication.dateC|date('d-M-y H:i:s') : '' }}</td>
                <td>{{ publication.dateM ? publication.dateM|date('d-M-y H:i:s') : '' }}</td>
                <td>{{ publication.vues }}</td>
                <td>
                    <a href="{{ path('app_publication_show', {'id': publication.id}) }}">show</a>
                    <a href="{{ path('app_publication_edit', {'id': publication.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publication_new') }}">Create new</a>
{% endblock %}
